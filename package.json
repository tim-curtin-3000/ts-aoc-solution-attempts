{
  "name": "advent-of-code-typescript-solution-attempts",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "solve": "node --import tsx ./src/index.ts",
    "watch": "node --import tsx --watch ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "bootstrap-day": "node  --env-file=.env --import tsx ./src/utils/bootstrap-day.ts",
    "lint": "eslint ./src",
    "prettier": "prettier --write ./",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@commitlint/cz-commitlint": "18.4.3",
    "@types/node": "20.10.1",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "eslint": "8.54.0",
    "husky": "8.0.3",
    "inquirer": "8.2.6",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "tsx": "4.6.1",
    "typescript": "5.3.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
